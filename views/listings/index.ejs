<% layout("/layouts/boilerplate") %>

<body>
  <style>
    /* TAGLINE STYLES (bigger now) */
  .tagline-container {
    text-align: center;
    margin-top: 1rem;
    font-size: 1.8rem; /* ‚¨ÜÔ∏è was 1.2rem */
    font-weight: 600;
