    }

    /* LISTING CARDS (bigger visuals) */
    .listing-link {
      text-decoration: none;
      color: inherit;
    }

    .listing-card {
      margin: 1.2rem;
      border: none;
      border-radius: 12px;
      box-shadow: 0 3px 12px rgba(0, 0, 0, 0.1);
      transition: transform 0.2s;
    }

    .listing-card:hover {
      transform: scale(1.025);
    }

